<button id="get-form">I finished another book!</button>
<div class="form-container">
  <form id="book-form" action="/books" method="POST">
    <p>
      Latest Book:
      <input id="title-text-field" name="title">
    </p>
    <p>
      Author:
      <input id="author-text-field" name="author">
    </p>
    <p>
      Date Completed:
      <input placeholder="dd/mm/yyyy" id="completed-text-field" name="completed">
    </p>
    <p>
      <label for="fiction">
        <input type="radio" id="fiction" name="fiction" value="true">Fiction
      </label>
      <label for="nonfiction">
        <input type="radio" id="nonfiction" name="fiction" value="false">Non-fiction
      </label>
    </p>
    <p>
      <label for="mystery">
        <input type="radio" id="mystery" name="mystery" value="true">Mystery
      </label>
      <label for="other">
        <input type="radio" id="other" name="mystery" value="false">Everything Else
      </label>
    </p>
    <button id="new-book-button">Submit Book</button>
  </form>
</div>

<div class="main-container">
  <div class="column">
    <h2>Non-fiction</h2>
    <div class="nonfiction"></div>
  </div>

  <div class="column">
    <h2>Mystery Fiction</h2>
    <div class="mystery-fiction"></div>
  </div>

  <div class="column">
    <h2>Other Fiction</h2>
    <div class="other-fiction"></div>
  </div>
</div>
